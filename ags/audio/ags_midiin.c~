  midiin = AGS_MIDIIN(sequencer);
  g_object_set(midiin,
	       "dsp-channels\0", channels,
	       "samplerate\0", rate,
	       "buffer-size\0", buffer_size,
	       "format\0", format,
	       NULL);
}

void
ags_midiin_get_presets(AgsSequencer *sequencer,
		       guint *channels,
		       guint *rate,
		       guint *buffer_size,
		       guint *format)
{
  AgsMidiin *midiin;

  midiin = AGS_MIDIIN(sequencer);

  if(channels != NULL){
    *channels = midiin->dsp_channels;
  }

  if(rate != NULL){
    *rate = midiin->samplerate;
  }

  if(buffer_size != NULL){
    *buffer_size = midiin->buffer_size;
  }

  if(format != NULL){
    *format = midiin->format;
  }
}

/**
 * ags_midiin_list_cards:
 * @sequencer: the #AgsSequencer
 * @card_id: alsa identifier
 * @card_name: card name
 *
 * List available sequencers.
 *
 * Since: 0.4
 */
void
ags_midiin_list_cards(AgsSequencer *sequencer,
		      GList **card_id, GList **card_name)
{
  snd_ctl_t *card_handle;
  snd_ctl_card_info_t *card_info;
  char *name;
  gchar *str;
  int card_num;
  int error;

  *card_id = NULL;
  *card_name = NULL;
  card_num = -1;

  while(TRUE){
    error = snd_card_next(&card_num);

    if(card_num < 0){
      break;
    }

    if(error < 0){
      continue;
    }

    str = g_strdup_printf("hw:%i\0", card_num);
    error = snd_ctl_open(&card_handle, str, 0);

    if(error < 0){
      continue;
    }

    snd_ctl_card_info_alloca(&card_info);
    error = snd_ctl_card_info(card_handle, card_info);

    if(error < 0){
      continue;
    }

    *card_id = g_list_prepend(*card_id, str);
    *card_name = g_list_prepend(*card_name, g_strdup(snd_ctl_card_info_get_name(card_info)));

    snd_ctl_close(card_handle);
  }

  snd_config_update_free_global();

  *card_id = g_list_reverse(*card_id);
  *card_name = g_list_reverse(*card_name);
}

/**
 * ags_midiin_pcm_info:
 * @sequencer: the #AgsSequencer
 * @card_id: alsa identifier
 * @channels_min: minimum channels supported
 * @channels_max: maximum channels supported
 * @rate_min: minimum samplerate supported
 * @rate_max: maximum samplerate supported
 * @buffer_size_min: minimum buffer size supported
 * @buffer_size_max maximum buffer size supported
 * @error: on success %NULL
 *
 * List sequencer settings.
 *
 * Since: 0.4
 */
void
ags_midiin_pcm_info(AgsSequencer *sequencer,
		    char *card_id,
		    guint *channels_min, guint *channels_max,
		    guint *rate_min, guint *rate_max,
		    guint *buffer_size_min, guint *buffer_size_max,
		    GError **error)
{
  int rc;
  snd_pcm_t *handle;
  snd_pcm_hw_params_t *params;
  unsigned int val;
  int dir;
  snd_pcm_uframes_t frames;
  int err;

  /* Open PCM device for playback. */
  handle = NULL;

  rc = snd_pcm_open(&handle, card_id, SND_PCM_STREAM_PLAYBACK, 0);

  if(rc < 0) {
    g_message("unable to open pcm device: %s\n\0", snd_strerror(rc));

    g_set_error(error,
		AGS_MIDIIN_ERROR,
		AGS_MIDIIN_ERROR_LOCKED_SEQUENCER,
		"unable to open pcm device: %s\n\0",
		snd_strerror(rc));

    return;
  }

  /* Allocate a hardware parameters object. */
  snd_pcm_hw_params_alloca(&params);

  /* Fill it in with default values. */
  snd_pcm_hw_params_any(handle, params);

  /* channels */
  snd_pcm_hw_params_get_channels_min(params, &val);
  *channels_min = val;

  snd_pcm_hw_params_get_channels_max(params, &val);
  *channels_max = val;

  /* samplerate */
  dir = 0;
  snd_pcm_hw_params_get_rate_min(params, &val, &dir);
  *rate_min = val;

  dir = 0;
  snd_pcm_hw_params_get_rate_max(params, &val, &dir);
  *rate_max = val;

  /* buffer size */
  dir = 0;
  snd_pcm_hw_params_get_buffer_size_min(params, &frames);
  *buffer_size_min = frames;

  dir = 0;
  snd_pcm_hw_params_get_buffer_size_max(params, &frames);
  *buffer_size_max = frames;

  snd_pcm_close(handle);
}

gboolean
ags_midiin_is_starting(AgsSequencer *sequencer)
{
  AgsMidiin *midiin;

  midiin = AGS_MIDIIN(sequencer);
  
  return(((AGS_MIDIIN_START_PLAY & (midiin->flags)) != 0) ? TRUE: FALSE);
}

gboolean
ags_midiin_is_playing(AgsSequencer *sequencer)
{
  AgsMidiin *midiin;

  midiin = AGS_MIDIIN(sequencer);
  
  return(((AGS_MIDIIN_PLAY & (midiin->flags)) != 0) ? TRUE: FALSE);
}

void
ags_midiin_alsa_init(AgsSequencer *sequencer,
		     GError **error)
{
  AgsMidiin *midiin;

  AgsMutexManager *mutex_manager;

  AgsApplicationContext *application_context;

  snd_pcm_t *handle;
  snd_pcm_hw_params_t *hwparams;
  snd_pcm_sw_params_t *swparams;

  int rc;
  unsigned int val;
  snd_pcm_uframes_t frames;
  unsigned int rate;
  unsigned int rrate;
  unsigned int channels;
  snd_pcm_uframes_t size;
  snd_pcm_sframes_t buffer_size;
  snd_pcm_sframes_t period_size;
  guint word_size;
  snd_pcm_format_t format;

  int period_event;

  int err, dir;
  
  pthread_mutex_t *mutex;
  
  static unsigned int period_time = 100000;

  midiin = AGS_MIDIIN(sequencer);

  application_context = ags_sequencer_get_application_context(sequencer);
  
  pthread_mutex_lock(application_context->mutex);
  
  mutex_manager = ags_mutex_manager_get_instance();

  mutex = ags_mutex_manager_lookup(mutex_manager,
				   (GObject *) midiin);
  
  pthread_mutex_unlock(application_context->mutex);

  /* retrieve word size */
  pthread_mutex_lock(mutex);

  switch(midiin->format){
  case AGS_SEQUENCER_RESOLUTION_8_BIT:
    {
      format = SND_PCM_FORMAT_S8;

      word_size = sizeof(signed char);
    }
    break;
  case AGS_SEQUENCER_RESOLUTION_16_BIT:
    {
      format = SND_PCM_FORMAT_S16;
      
      word_size = sizeof(signed short);
    }
    break;
  case AGS_SEQUENCER_RESOLUTION_24_BIT:
    {
      format = SND_PCM_FORMAT_S24;
      
      //NOTE:JK: The 24-bit linear samples use 32-bit physical space
      word_size = sizeof(signed long);
    }
    break;
  case AGS_SEQUENCER_RESOLUTION_32_BIT:
    {
      word_size = sizeof(signed long);
    }
    break;
  case AGS_SEQUENCER_RESOLUTION_64_BIT:
    {
      word_size = sizeof(signed long long);
    }
    break;
  default:
    g_warning("ags_midiin_alsa_init(): unsupported word size\0");
    return;
  }
  
  /* prepare for playback */
  midiin->flags |= (AGS_MIDIIN_BUFFER3 |
		    AGS_MIDIIN_START_PLAY |
		    AGS_MIDIIN_PLAY |
		    AGS_MIDIIN_NONBLOCKING);

  midiin->note_offset = 0;

  memset(midiin->buffer[0], 0, midiin->dsp_channels * midiin->buffer_size * word_size);
  memset(midiin->buffer[1], 0, midiin->dsp_channels * midiin->buffer_size * word_size);
  memset(midiin->buffer[2], 0, midiin->dsp_channels * midiin->buffer_size * word_size);
  memset(midiin->buffer[3], 0, midiin->dsp_channels * midiin->buffer_size * word_size);

  /*  */
  period_event = 0;
  
  /* Open PCM device for playback. */
  if ((err = snd_pcm_open(&handle, midiin->out.alsa.device, SND_PCM_STREAM_PLAYBACK, 0)) < 0) {
    pthread_mutex_unlock(mutex);
    printf("Playback open error: %s\n", snd_strerror(err));
    g_set_error(error,
		AGS_MIDIIN_ERROR,
		AGS_MIDIIN_ERROR_LOCKED_SEQUENCER,
		"unable to open pcm device: %s\n\0",
		snd_strerror(err));
    return;
  }

  snd_pcm_hw_params_alloca(&hwparams);
  snd_pcm_sw_params_alloca(&swparams);

  /* choose all parameters */
  err = snd_pcm_hw_params_any(handle, hwparams);
  if (err < 0) {
    pthread_mutex_unlock(mutex);
    printf("Broken configuration for playback: no configurations available: %s\n", snd_strerror(err));
    return;
  }

  /* set hardware resampling */
  err = snd_pcm_hw_params_set_rate_resample(handle, hwparams, 1);
  if (err < 0) {
    pthread_mutex_unlock(mutex);
    printf("Resampling setup failed for playback: %s\n", snd_strerror(err));
    return;
  }

  /* set the interleaved read/write format */
  err = snd_pcm_hw_params_set_access(handle, hwparams, SND_PCM_ACCESS_RW_INTERLEAVED);
  if (err < 0) {
    pthread_mutex_unlock(mutex);
    printf("Access type not available for playback: %s\n", snd_strerror(err));
    return;
  }

  /* set the sample format */
  err = snd_pcm_hw_params_set_format(handle, hwparams, format);
  if (err < 0) {
    pthread_mutex_unlock(mutex);
    printf("Sample format not available for playback: %s\n", snd_strerror(err));
    return;
  }

  /* set the count of channels */
  channels = midiin->dsp_channels;
  err = snd_pcm_hw_params_set_channels(handle, hwparams, channels);
  if (err < 0) {
    pthread_mutex_unlock(mutex);
    printf("Channels count (%i) not available for playbacks: %s\n", channels, snd_strerror(err));
    return;
  }

  /* set the stream rate */
  rate = midiin->samplerate;
  rrate = rate;
  err = snd_pcm_hw_params_set_rate_near(handle, hwparams, &rrate, 0);
  if (err < 0) {
    pthread_mutex_unlock(mutex);
    printf("Rate %iHz not available for playback: %s\n", rate, snd_strerror(err));
    return;
  }

  if (rrate != rate) {
    pthread_mutex_unlock(mutex);
    printf("Rate doesn't match (requested %iHz, get %iHz)\n", rate, err);
    //    exit(-EINVAL);
    return;
  }

  /* set the buffer size */
  size = midiin->buffer_size;
  err = snd_pcm_hw_params_set_buffer_size(handle, hwparams, size);
  if (err < 0) {
    pthread_mutex_unlock(mutex);
    printf("Unable to set buffer size %i for playback: %s\n", size, snd_strerror(err));
    return;
  }

  buffer_size = size;

  /* set the period time */
  period_time = MSEC_PER_SEC / midiin->samplerate;
  dir = -1;
  err = snd_pcm_hw_params_set_period_time_near(handle, hwparams, &period_time, &dir);
  if (err < 0) {
    pthread_mutex_unlock(mutex);
    printf("Unable to set period time %i for playback: %s\n", period_time, snd_strerror(err));
    return;
  }

  err = snd_pcm_hw_params_get_period_size(hwparams, &size, &dir);
  if (err < 0) {
    pthread_mutex_unlock(mutex);
    printf("Unable to get period size for playback: %s\n", snd_strerror(err));
    return;
  }
  period_size = size;

  /* write the parameters to device */
  err = snd_pcm_hw_params(handle, hwparams);
  if (err < 0) {
    pthread_mutex_unlock(mutex);
    printf("Unable to set hw params for playback: %s\n", snd_strerror(err));
    return;
  }

  /* get the current swparams */
  err = snd_pcm_sw_params_current(handle, swparams);
  if (err < 0) {
    pthread_mutex_unlock(mutex);
    printf("Unable to determine current swparams for playback: %s\n", snd_strerror(err));
    return;
  }

  /* start the transfer when the buffer is almost full: */
  /* (buffer_size / avail_min) * avail_min */
  err = snd_pcm_sw_params_set_start_threshold(handle, swparams, (buffer_size / period_size) * period_size);
  if (err < 0) {
    pthread_mutex_unlock(mutex);
    printf("Unable to set start threshold mode for playback: %s\n", snd_strerror(err));
    return;
  }

  /* allow the transfer when at least period_size samples can be processed */
  /* or disable this mechanism when period event is enabled (aka interrupt like style processing) */
  err = snd_pcm_sw_params_set_avail_min(handle, swparams, period_event ? buffer_size : period_size);
  if (err < 0) {
    pthread_mutex_unlock(mutex);
    printf("Unable to set avail min for playback: %s\n", snd_strerror(err));
    return;
  }

  /* write the parameters to the playback device */
  err = snd_pcm_sw_params(handle, swparams);
  if (err < 0) {
    pthread_mutex_unlock(mutex);
    printf("Unable to set sw params for playback: %s\n", snd_strerror(err));
    return;
  }

  /*  */
  midiin->out.alsa.handle = handle;
  midiin->tact_counter = 0.0;
  midiin->delay_counter = 0.0;
  midiin->tic_counter = 0;

  midiin->flags |= AGS_MIDIIN_INITIALIZED;

  pthread_mutex_unlock(mutex);
}

void
ags_midiin_alsa_play(AgsSequencer *sequencer,
		     GError **error)
{
  AgsMidiin *midiin;

  AgsMutexManager *mutex_manager;

  AgsApplicationContext *application_context;

  gdouble delay;
  guint word_size;
  
  pthread_mutex_t *mutex;
  
  midiin = AGS_MIDIIN(sequencer);

  /*  */
  application_context = ags_sequencer_get_application_context(sequencer);
  
  pthread_mutex_lock(application_context->mutex);
  
  mutex_manager = ags_mutex_manager_get_instance();

  mutex = ags_mutex_manager_lookup(mutex_manager,
				   (GObject *) midiin);
  
  pthread_mutex_unlock(application_context->mutex);

  /* retrieve word size */
  pthread_mutex_lock(mutex);

  switch(midiin->format){
  case AGS_SEQUENCER_RESOLUTION_8_BIT:
    {
      word_size = sizeof(signed char);
    }
    break;
  case AGS_SEQUENCER_RESOLUTION_16_BIT:
    {
      word_size = sizeof(signed short);
    }
    break;
  case AGS_SEQUENCER_RESOLUTION_24_BIT:
    {
      word_size = sizeof(signed long);
    }
    break;
  case AGS_SEQUENCER_RESOLUTION_32_BIT:
    {
      word_size = sizeof(signed long);
    }
    break;
  case AGS_SEQUENCER_RESOLUTION_64_BIT:
    {
      word_size = sizeof(signed long long);
    }
    break;
  default:
    g_warning("ags_midiin_alsa_play(): unsupported word size\0");
    return;
  }

  /* do playback */
  midiin->flags &= (~AGS_MIDIIN_START_PLAY);

  if((AGS_MIDIIN_INITIALIZED & (midiin->flags)) == 0){
    pthread_mutex_unlock(mutex);
    
    return;
  }
  
  /* check buffer flag */
  if((AGS_MIDIIN_BUFFER0 & (midiin->flags)) != 0){
    memset(midiin->buffer[3], 0, (size_t) midiin->dsp_channels * midiin->buffer_size * word_size);
      
    midiin->out.alsa.rc = snd_pcm_writei(midiin->out.alsa.handle,
					 midiin->buffer[0],
					 (snd_pcm_uframes_t) (midiin->buffer_size));

    if((AGS_MIDIIN_NONBLOCKING & (midiin->flags)) == 0){
      if(midiin->out.alsa.rc == -EPIPE){
	/* EPIPE means underrun */
	snd_pcm_prepare(midiin->out.alsa.handle);

#ifdef AGS_DEBUG
	g_message("underrun occurred\0");
#endif
      }else if(midiin->out.alsa.rc == -ESTRPIPE){
	static const struct timespec idle = {
	  0,
	  4000,
	};

	int err;

	while((err = snd_pcm_resume(midiin->out.alsa.handle)) == -EAGAIN)
	  nanosleep(&idle, NULL); /* wait until the suspend flag is released */
	if(err < 0){
	  err = snd_pcm_prepare(midiin->out.alsa.handle);
	}
      }else if(midiin->out.alsa.rc < 0){
	g_message("error from writei: %s\0", snd_strerror(midiin->out.alsa.rc));
      }else if(midiin->out.alsa.rc != (int) midiin->buffer_size) {
	g_message("short write, write %d frames\0", midiin->out.alsa.rc);
      }
    }      
    //      g_message("ags_midiin_play 0\0");
  }else if((AGS_MIDIIN_BUFFER1 & (midiin->flags)) != 0){
    memset(midiin->buffer[0], 0, (size_t) midiin->dsp_channels * midiin->buffer_size * word_size);

    midiin->out.alsa.rc = snd_pcm_writei(midiin->out.alsa.handle,
					 midiin->buffer[1],
					 (snd_pcm_uframes_t) (midiin->buffer_size));
     
    if((AGS_MIDIIN_NONBLOCKING & (midiin->flags)) == 0){
      if(midiin->out.alsa.rc == -EPIPE){
	/* EPIPE means underrun */
	snd_pcm_prepare(midiin->out.alsa.handle);

#ifdef AGS_DEBUG
	g_message("underrun occurred\0");
#endif
      }else if(midiin->out.alsa.rc == -ESTRPIPE){
	static const struct timespec idle = {
	  0,
	  4000,
	};

	int err;	

	while((err = snd_pcm_resume(midiin->out.alsa.handle)) == -EAGAIN)
	  nanosleep(&idle, NULL); /* wait until the suspend flag is released */
	if(err < 0){
	  err = snd_pcm_prepare(midiin->out.alsa.handle);
	}
      }else if(midiin->out.alsa.rc < 0){
	g_message("error from writei: %s\0", snd_strerror(midiin->out.alsa.rc));
      }else if(midiin->out.alsa.rc != (int) midiin->buffer_size) {
	g_message("short write, write %d frames\0", midiin->out.alsa.rc);
      }
    }      
    //      g_message("ags_midiin_play 1\0");
  }else if((AGS_MIDIIN_BUFFER2 & (midiin->flags)) != 0){
    memset(midiin->buffer[1], 0, (size_t) midiin->dsp_channels * midiin->buffer_size * word_size);
      
    midiin->out.alsa.rc = snd_pcm_writei(midiin->out.alsa.handle,
					 midiin->buffer[2],
					 (snd_pcm_uframes_t) (midiin->buffer_size));

    if((AGS_MIDIIN_NONBLOCKING & (midiin->flags)) == 0){
      if(midiin->out.alsa.rc == -EPIPE){
	/* EPIPE means underrun */
	snd_pcm_prepare(midiin->out.alsa.handle);

#ifdef AGS_DEBUG
	g_message("underrun occurred\0");
#endif
      }else if(midiin->out.alsa.rc == -ESTRPIPE){
	static const struct timespec idle = {
	  0,
	  4000,
	};

	int err;

	while((err = snd_pcm_resume(midiin->out.alsa.handle)) == -EAGAIN)
	  nanosleep(&idle, NULL); /* wait until the suspend flag is released */
	if(err < 0){
	  err = snd_pcm_prepare(midiin->out.alsa.handle);
	}
      }else if(midiin->out.alsa.rc < 0){
	g_message("error from writei: %s\0", snd_strerror(midiin->out.alsa.rc));
      }else if(midiin->out.alsa.rc != (int) midiin->buffer_size) {
	g_message("short write, write %d frames\0", midiin->out.alsa.rc);
      }
    }
    //      g_message("ags_midiin_play 2\0");
  }else if((AGS_MIDIIN_BUFFER3 & midiin->flags) != 0){
    memset(midiin->buffer[2], 0, (size_t) midiin->dsp_channels * midiin->buffer_size * word_size);
      
    midiin->out.alsa.rc = snd_pcm_writei(midiin->out.alsa.handle,
					 midiin->buffer[3],
					 (snd_pcm_uframes_t) (midiin->buffer_size));

    if((AGS_MIDIIN_NONBLOCKING & (midiin->flags)) == 0){
      if(midiin->out.alsa.rc == -EPIPE){
	snd_pcm_prepare(midiin->out.alsa.handle);

#ifdef AGS_DEBUG
	g_message("underrun occurred\0");
#endif
      }else if(midiin->out.alsa.rc == -ESTRPIPE){
	static const struct timespec idle = {
	  0,
	  4000,
	};

	int err;

	while((err = snd_pcm_resume(midiin->out.alsa.handle)) == -EAGAIN)
	  nanosleep(&idle, NULL); /* wait until the suspend flag is released */
	if(err < 0){
	  err = snd_pcm_prepare(midiin->out.alsa.handle);
	}
      }else if(midiin->out.alsa.rc < 0){
	g_message("error from writei: %s\0", snd_strerror(midiin->out.alsa.rc));
      }else if(midiin->out.alsa.rc != (int) midiin->buffer_size) {
	g_message("short write, write %d frames\0", midiin->out.alsa.rc);
      }
    }
    //      g_message("ags_midiin_play 3\0");
  }

  /* tic */
  ags_sequencer_tic(sequencer);

  /* reset - switch buffer flags */
  ags_midiin_switch_buffer_flag(midiin);

  snd_pcm_prepare(midiin->out.alsa.handle);

  pthread_mutex_unlock(mutex);
}

void
ags_midiin_alsa_free(AgsSequencer *sequencer)
{
  AgsMidiin *midiin;

  AgsMutexManager *mutex_manager;

  AgsApplicationContext *application_context;

  pthread_mutex_t *mutex;
  
  application_context = ags_sequencer_get_application_context(sequencer);
  
  pthread_mutex_lock(application_context->mutex);
  
  mutex_manager = ags_mutex_manager_get_instance();

  mutex = ags_mutex_manager_lookup(mutex_manager,
				   (GObject *) midiin);
  
  pthread_mutex_unlock(application_context->mutex);

  if((AGS_MIDIIN_INITIALIZED & (midiin->flags)) == 0){
    return;
  }

  midiin = AGS_MIDIIN(sequencer);
  
  snd_pcm_drain(midiin->out.alsa.handle);
  snd_pcm_close(midiin->out.alsa.handle);
  midiin->out.alsa.handle = NULL;
  midiin->flags &= (~(AGS_MIDIIN_BUFFER0 |
		      AGS_MIDIIN_BUFFER1 |
		      AGS_MIDIIN_BUFFER2 |
		      AGS_MIDIIN_BUFFER3 |
		      AGS_MIDIIN_PLAY));
}

void
ags_midiin_tic(AgsSequencer *sequencer)
{
  AgsMidiin *midiin;
  gdouble delay;
  
  midiin = AGS_MIDIIN(sequencer);
  
  /* determine if attack should be switched */
  delay = midiin->delay[midiin->tic_counter];
  midiin->delay_counter += 1.0;

  if(midiin->delay_counter >= delay){
    /* delay */
    ags_sequencer_offset_changed(sequencer,
				 midiin->note_offset);
    
    /* reset - delay counter */
    midiin->delay_counter = 0.0;
    midiin->tact_counter += 1.0;
  } 
}

void
ags_midiin_offset_changed(AgsSequencer *sequencer,
			  guint note_offset)
{
  AgsMidiin *midiin;
  
  midiin = AGS_MIDIIN(sequencer);

  midiin->tic_counter += 1;

  if(midiin->tic_counter == AGS_SEQUENCER_DEFAULT_PERIOD){
    /* reset - tic counter i.e. modified delay index within period */
    midiin->tic_counter = 0;
  }
}

void
ags_midiin_set_bpm(AgsSequencer *sequencer,
		   gdouble bpm)
{
  AgsMidiin *midiin;

  midiin = AGS_MIDIIN(sequencer);

  midiin->bpm = bpm;

  ags_midiin_adjust_delay_and_attack(midiin);
}

gdouble
ags_midiin_get_bpm(AgsSequencer *sequencer)
{
  AgsMidiin *midiin;
  
  midiin = AGS_MIDIIN(sequencer);

  return(midiin->bpm);
}

void
ags_midiin_set_delay_factor(AgsSequencer *sequencer,
			    gdouble delay_factor)
{
  AgsMidiin *midiin;

  midiin = AGS_MIDIIN(sequencer);

  midiin->delay_factor = delay_factor;

  ags_midiin_adjust_delay_and_attack(midiin);
}

gdouble
ags_midiin_get_delay_factor(AgsSequencer *sequencer)
{
  AgsMidiin *midiin;
  
  midiin = AGS_MIDIIN(sequencer);

  return(midiin->delay_factor);
}

gdouble
ags_midiin_get_delay(AgsSequencer *sequencer)
{
  AgsMidiin *midiin;
  guint index;
  
  midiin = AGS_MIDIIN(sequencer);
  index = midiin->tic_counter;
  
  return(midiin->delay[index]);
}

guint
ags_midiin_get_attack(AgsSequencer *sequencer)
{
  AgsMidiin *midiin;
  guint index;
  
  midiin = AGS_MIDIIN(sequencer);
  index = midiin->tic_counter;
  
  return(midiin->attack[index]);
}

void*
ags_midiin_get_buffer(AgsSequencer *sequencer)
{
  AgsMidiin *midiin;
  signed short *buffer;
  
  midiin = AGS_MIDIIN(sequencer);

  if((AGS_MIDIIN_BUFFER0 & (midiin->flags)) != 0){
    buffer = midiin->buffer[0];
  }else if((AGS_MIDIIN_BUFFER1 & (midiin->flags)) != 0){
    buffer = midiin->buffer[1];
  }else if((AGS_MIDIIN_BUFFER2 & (midiin->flags)) != 0){
    buffer = midiin->buffer[2];
  }else if((AGS_MIDIIN_BUFFER3 & (midiin->flags)) != 0){
    buffer = midiin->buffer[3];
  }else{
    buffer = NULL;
  }

  return(buffer);
}

void*
ags_midiin_get_next_buffer(AgsSequencer *sequencer)
{
  AgsMidiin *midiin;
  signed short *buffer;
  
  midiin = AGS_MIDIIN(sequencer);

  if((AGS_MIDIIN_BUFFER0 & (midiin->flags)) != 0){
    buffer = midiin->buffer[1];
  }else if((AGS_MIDIIN_BUFFER1 & (midiin->flags)) != 0){
    buffer = midiin->buffer[2];
  }else if((AGS_MIDIIN_BUFFER2 & (midiin->flags)) != 0){
    buffer = midiin->buffer[3];
  }else if((AGS_MIDIIN_BUFFER3 & (midiin->flags)) != 0){
    buffer = midiin->buffer[0];
  }else{
    buffer = NULL;
  }

  return(buffer);
}

void
ags_midiin_set_note_offset(AgsSequencer *sequencer,
			   guint note_offset)
{
  AGS_MIDIIN(sequencer)->note_offset = note_offset;
}

guint
ags_midiin_get_note_offset(AgsSequencer *sequencer)
{
  return(AGS_MIDIIN(sequencer)->note_offset);
}

void
ags_midiin_set_audio(AgsSequencer *sequencer,
		     GList *audio)
{
  AgsMidiin *midiin;

  midiin = AGS_MIDIIN(sequencer);
  midiin->audio = audio;
}

GList*
ags_midiin_get_audio(AgsSequencer *sequencer)
{
  AgsMidiin *midiin;

  midiin = AGS_MIDIIN(sequencer);

  return(midiin->audio);
}

/**
 * ags_midiin_adjust_delay_and_attack:
 * @midiin: the #AgsMidiin
 *
 * Calculate delay and attack and reset it.
 *
 * Since: 0.7.0
 */
void
ags_midiin_adjust_delay_and_attack(AgsMidiin *midiin)
{
  gdouble delay;
  guint default_tact_frames;
  guint default_period;
  guint i;

  if(midiin == NULL){
    return;
  }
  
  delay = ((gdouble) midiin->samplerate / (gdouble) midiin->buffer_size) * (gdouble)(60.0 / midiin->bpm) * midiin->delay_factor;

#ifdef AGS_DEBUG
  g_message("delay : %f\0", delay);
#endif
  
  default_tact_frames = (guint) (delay * midiin->buffer_size);
  default_period = (1.0 / AGS_SEQUENCER_DEFAULT_PERIOD) * (default_tact_frames);

  midiin->attack[0] = 0;
  midiin->delay[0] = delay;
  
  for(i = 1; i < (int)  2.0 * AGS_SEQUENCER_DEFAULT_PERIOD; i++){
    midiin->attack[i] = (guint) ((i * default_tact_frames + midiin->attack[i - 1]) / (AGS_SEQUENCER_DEFAULT_PERIOD / (delay * i))) % (guint) (midiin->buffer_size);
    
#ifdef AGS_DEBUG
    g_message("%d\0", midiin->attack[i]);
#endif
  }
  
  for(i = 1; i < (int) 2.0 * AGS_SEQUENCER_DEFAULT_PERIOD; i++){
    midiin->delay[i] = ((gdouble) (default_tact_frames + midiin->attack[i])) / (gdouble) midiin->buffer_size;
    
#ifdef AGS_DEBUG
    g_message("%f\0", midiin->delay[i]);
#endif
  }
}

/**
 * ags_midiin_new:
 * @application_context: the #AgsApplicationContext
 *
 * Creates an #AgsMidiin, refering to @application_context.
 *
 * Returns: a new #AgsMidiin
 *
 * Since: 0.7.0
 */
AgsMidiin*
ags_midiin_new(GObject *application_context)
{
  AgsMidiin *midiin;

  midiin = (AgsMidiin *) g_object_new(AGS_TYPE_MIDIIN,
				      "application-context\0", application_context,
				      NULL);
  
  return(midiin);
}
