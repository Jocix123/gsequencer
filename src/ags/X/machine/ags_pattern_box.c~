void
ags_pattern_box_paint(AgsPatternBox *pattern_box)
{
  ags_pattern_box_draw_gutter(pattern_box);
  ags_pattern_box_draw_matrix(pattern_box);

  ags_pattern_box_draw_cursor(pattern_box);
}

void
ags_pattern_box_draw_gutter(AgsPatternBox *pattern_box)
{
  AgsMachine *machine;
  
  AgsChannel *channel;

  AgsMutexManager *mutex_manager;

  guint gutter;
  int i, j;

  pthread_mutex_t *audio_mutex;

  machine = gtk_widget_get_ancestor(pattern_box,
				    AGS_TYPE_MACHINE);
  
  pthread_mutex_lock(&(ags_application_mutex));
  
  mutex_manager = ags_mutex_manager_get_instance();

  audio_mutex = ags_mutex_manager_lookup(mutex_manager,
					 (GObject *) machine->audio);
  
  pthread_mutex_unlock(&(ags_application_mutex));

  pthread_mutex_lock(audio_mutex);

  gdk_draw_rectangle(GTK_WIDGET(pattern_box->drawing_area)->window,
		     GTK_WIDGET(pattern_box->drawing_area)->style->bg_gc[0],
		     TRUE,
		     0, 0,
		     288, 80);

  channel = ags_channel_nth(machine->audio->input, machine->audio->input_lines - ((guint) GTK_RANGE(pattern_box->vscrollbar)->adjustment->value + AGS_PATTERN_BOX_MAX_CONTROLS_SHOWN_VERTICALLY) - 1);

  if(machine->audio->input_pads > AGS_PATTERN_BOX_MAX_CONTROLS_SHOWN_VERTICALLY){
    gutter = AGS_PATTERN_BOX_MAX_CONTROLS_SHOWN_VERTICALLY;
  }else{
    gutter = machine->audio->input_pads;
  }

  for (i = 0; i < gutter; i++){
    for (j = 0; j < 32; j++){
      gdk_draw_rectangle(GTK_WIDGET(pattern_box->drawing_area)->window,
			 GTK_WIDGET(pattern_box->drawing_area)->style->fg_gc[0],
			 FALSE,
			 j * 12, i * 10,
			 12, 10);

      ags_pattern_box_redraw_gutter_point (pattern_box, channel, j, i);
    }

    channel = channel->prev;
  }

  pthread_mutex_unlock(audio_mutex);
}

void
ags_pattern_box_draw_matrix(AgsPatternBox *pattern_box)
{
  AgsMachine *machine;

  AgsChannel *channel;

  AgsMutexManager *mutex_manager;

  guint gutter;
  int i, j;

  pthread_mutex_t *audio_mutex;

  machine = gtk_widget_get_ancestor(pattern_box,
				    AGS_TYPE_MACHINE);

  pthread_mutex_lock(&(ags_application_mutex));
  
  mutex_manager = ags_mutex_manager_get_instance();

  audio_mutex = ags_mutex_manager_lookup(mutex_manager,
					 (GObject *) machine->audio);
  
  pthread_mutex_unlock(&(ags_application_mutex));

  pthread_mutex_lock(audio_mutex);

  if(machine->audio->input_pads > AGS_PATTERN_BOX_MAX_CONTROLS_SHOWN_VERTICALLY){
    gutter = AGS_PATTERN_BOX_MAX_CONTROLS_SHOWN_VERTICALLY;
  }else{
    gutter = machine->audio->input_pads;
  }

  channel = ags_channel_nth(machine->audio->input, machine->audio->input_pads - (guint) GTK_RANGE(pattern_box->vscrollbar)->adjustment->value - 1);

  if(channel == NULL){
    pthread_mutex_unlock(audio_mutex);
    
    return;
  }

  for (i = 0; i < gutter; i++){
    for (j = 0; j < 32; j++)
      ags_pattern_box_redraw_gutter_point(pattern_box, channel, j, i);

    channel = channel->prev;
  }

  pthread_mutex_unlock(audio_mutex);
}

void
ags_pattern_box_draw_cursor(AgsPatternBox *pattern_box)
{
  guint i, j;

  
  if(pattern_box->cursor_y >= GTK_RANGE(pattern_box->vscrollbar)->adjustment->value &&
     pattern_box->cursor_y < GTK_RANGE(pattern_box->vscrollbar)->adjustment->value + pattern_box->n_rows){
    i = pattern_box->cursor_y - GTK_RANGE(pattern_box->vscrollbar)->adjustment->value;
    j = pattern_box->cursor_x;
    
    if((AGS_PATTERN_BOX_CURSOR_ON & (pattern_box->flags)) != 0){
      ags_pattern_box_highlight_gutter_point(pattern_box, j, i);
    }else{
      ags_pattern_box_unpaint_gutter_point(pattern_box, j, i);
    }
  }
}

void
ags_pattern_box_redraw_gutter_point(AgsPatternBox *pattern_box, AgsChannel *channel, guint j, guint i)
{
  AgsMachine *machine;

  if(channel->pattern == NULL)
    return;

  machine = gtk_widget_get_ancestor(pattern_box,
				    AGS_TYPE_MACHINE);

  if(ags_pattern_get_bit((AgsPattern *) channel->pattern->data, machine->bank_0, machine->bank_1, j)){
    ags_pattern_box_highlight_gutter_point(pattern_box, j, i);
  }else{
    ags_pattern_box_unpaint_gutter_point(pattern_box, j, i);
  }
}

void
ags_pattern_box_highlight_gutter_point(AgsPatternBox *pattern_box, guint j, guint i)
{
  gdk_draw_rectangle(GTK_WIDGET (pattern_box->drawing_area)->window,
		     GTK_WIDGET (pattern_box->drawing_area)->style->fg_gc[0],
		     TRUE,
		     j * pattern_box->cell_width + 1, i * pattern_box->cell_height + 1,
		     11, 9);
}

void
ags_pattern_box_unpaint_gutter_point(AgsPatternBox *pattern_box, guint j, guint i)
{
  gdk_draw_rectangle(GTK_WIDGET (pattern_box->drawing_area)->window,
		     GTK_WIDGET (pattern_box->drawing_area)->style->bg_gc[0],
		     TRUE,
		     j * pattern_box->cell_width + 1, i * pattern_box->cell_height +1,
		     11, 9);
}

void*
ags_pattern_box_blink_worker(void *data)
{
  AgsWindow *window;
  AgsPatternBox *pattern_box;
  
  AgsTaskThread *task_thread;
  
  AgsBlinkPatternBoxCursor *blink_pattern_box_cursor;
  
  static const guint blink_delay = 1000000; // blink every second
  
  pattern_box = AGS_PATTERN_BOX(data);
  window = gtk_widget_get_ancestor(pattern_box,
				   AGS_TYPE_WINDOW);
  
  task_thread = AGS_TASK_THREAD(AGS_AUDIO_LOOP(AGS_MAIN(window->ags_main)->main_loop)->task_thread);

  while(gtk_widget_has_focus(pattern_box)){
    /* blink cursor */
    blink_pattern_box_cursor = ags_blink_pattern_box_cursor_new(pattern_box,
								  !(AGS_PATTERN_BOX_CURSOR_ON & (pattern_box->flags)));
    ags_task_thread_append_task(task_thread,
				blink_pattern_box_cursor);

    /* delay */
    usleep(blink_delay);
  }

  /* unset cursor */
  blink_pattern_box_cursor = ags_blink_pattern_box_cursor_new(pattern_box,
								FALSE);
  ags_task_thread_append_task(task_thread,
			      blink_pattern_box_cursor);

  return(NULL);
}

/**
 * ags_pattern_box_new:
 *
 * Creates an #AgsPatternBox
 *
 * Returns: a new #AgsPatternBox
 *
 * Since: 0.5
 */
AgsPatternBox*
ags_pattern_box_new()
{
  AgsPatternBox *pattern_box;

  pattern_box = (AgsPatternBox *) g_object_new(AGS_TYPE_PATTERN_BOX,
						 NULL);

  return(pattern_box);
}
