#include <ags/object/ags_application_context.h>

#ifdef AGS_USE_LINUX_THREADS
#include <ags/thread/ags_thread-kthreads.h>
#else
#include <ags/thread/ags_thread-posix.h>
#endif

#include <ags/X/machine/ags_window.h>
#include <ags/X/machine/ags_drum.h>

#include <glib.h>
#include <glib-object.h>

#include <gtk/gtk.h>

#include <CUnit/CUnit.h>

void ags_functional_drum_open_drumkit_test();
void ags_functional_drum_edit_pattern_test();

/* The suite initialization function.
 * Opens the temporary file used by the tests.
 * Returns zero on success, non-zero otherwise.
 */
int
ags_functional_drum_init_suite()
{
}

/* The suite cleanup function.
 * Closes the temporary file used by the tests.
 * Returns zero on success, non-zero otherwise.
 */
int
ags_functional_drum_clean_suite()
{
}

/**
 */
void
ags_functional_drum_open_drumkit_test()
{
}

void
ags_functional_drum_edit_pattern_test()
{
}

int
main(int argc, char **argv)
{
  CU_pSuite pSuite = NULL;

  /* initialize the CUnit test registry */
  if(CUE_SUCCESS != CU_initialize_registry()){
    return CU_get_error();
  }

  /* add a suite to the registry */
  pSuite = CU_add_suite("Suite_1", init_functional_suite, clean_functional_suite);
  
  if(NULL == pSuite) {
    CU_cleanup_registry();
    
    return CU_get_error();
  }

  /* add the tests to the suite */
  /* NOTE - ORDER IS IMPORTANT - MUST TEST fread() AFTER fprintf() */
  if((NULL == CU_add_test(pSuite, "test of AgsDrum opening drum kit\0", ags_functional_drum_open_drumkit_test)) ||
     (NULL == CU_add_test(pSuite, "test of AgsDrum editing pattern\0", ags_functional_drum_edit_pattern_test)))
    {
      CU_cleanup_registry();
      
      return CU_get_error();
    }
  
  /* Run all tests using the CUnit Basic interface */
  CU_basic_set_mode(CU_BRM_VERBOSE);
  CU_basic_run_tests();
  
  CU_cleanup_registry();
  
  return(CU_get_error());
}

